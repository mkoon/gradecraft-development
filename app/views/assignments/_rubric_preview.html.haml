%table.responsive#grade-rubric-table
  %thead
    %tr
      %th Criteria
      %th(colspan="#{@assignment.rubric.try(:max_tier_count)}")
        Levels

  %tbody
    - @metrics.each do |metric|
      %tr
        %td
          .metric-box
            .metric-heading
              .metric-name.uppercase.bold= metric.wrapped_name(28).html_safe
              .metric-points.italic= "#{points metric.max_points} Points"
            .metric-description= truncate(metric.description, :omission => " ... (continued)", :length => 200)

        - metric.tiers.sorted.each do |tier|
          %td
            .tier-box
              .tier-heading
                .tier-name.uppercase= tier.wrapped_name(25).html_safe
                .tier-points.italic= "#{points tier.points} Points"
              .tier-description= truncate(tier.description, :omission => " ... (continued)", :length => 200)

            .row.badge-row
              - tier.tier_badges.each_with_index do |badge, index|
                - if index < 2
                  %span.tier-badge-image
                    %img{:src => badge.badge.icon, :class => "metric_badge" }
        - rubric_max_tier_count = @rubric.max_tier_count
        - if metric.tiers.size < rubric_max_tier_count
          %td.filler(colspan="#{rubric_max_tier_count - metric.tiers.size}")
